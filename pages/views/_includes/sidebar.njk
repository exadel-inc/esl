<esl-toggleable 
  id="sidebar"
  body-class="toggleable-opened"
  close-on-esc>
  <nav class="container esl-scrollable-content">
    <a class="sidebar-logo logo-light logo-animated mr-5" href="{{ '/' | url }}">
      {% include 'pages/static/assets/logo.svg' %}
      <span class="">Exadel Smart Library</span>
    </a>
    {% from 'sidebar-menu.njk' import menu with context %}
    <ul class="sidebar-menu">
      <li class="">
        {{ menu ('Examples', 'examples') }}
      </li>
      <li class="">
        {{ menu ('Components', 'components') }}
      </li>
      <li class="">
        {{ menu ('Utils', 'utils') }}
      </li>
    </ul>
    <esl-trigger target="#sidebar" mode="toggle">
      <button class="ico-btn arrows-icon"></button>
    </esl-trigger>
    <esl-scrollbar class="sidebar-scrollbar" target=".container"></esl-scrollbar>
  </nav>
</esl-toggleable>
