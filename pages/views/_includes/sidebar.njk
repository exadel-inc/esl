<esl-sidebar open
             id="sidebar"
             class="open">
  <nav class="sidebar-nav">
    <a class="sidebar-heading decoration-none logo-light logo-animated mr-5" href="{{ '/' | url }}">
      <span class="sidebar-logo">{% include 'static/assets/logo.svg' %}</span>
      <span class="sidebar-title">{{ site.name }}</span>
    </a>
    {% from 'sidebar-menu.njk' import menu with context %}
    <div class="sb-nav-list-wrapper">
      <ul class="sidebar-nav-list esl-scrollable-content">
        <li class="sidebar-nav-item">
          {{ menu ('Getting started', '', 'static/assets/sidebar/start.svg') }}
        </li>
        <li class="sidebar-nav-item">
          {{ menu ('Examples', 'examples', 'static/assets/sidebar/examples.svg') }}
        </li>
        <li class="sidebar-nav-item">
          {{ menu ('Components', 'components', 'static/assets/sidebar/components.svg') }}
        </li>
        <li class="sidebar-nav-item">
          {{ menu ('Utils', 'utils', 'static/assets/sidebar/utils.svg') }}
        </li>
        <li class="sidebar-nav-item">
          {{ menu ('Contribution', '', 'static/assets/sidebar/contribution.svg') }}
        </li>
      </ul>
      <esl-scrollbar class="sidebar-scrollbar" target="::prev"></esl-scrollbar>
    </div>
    <esl-trigger class="sidebar-ico-btn sidebar-arrows-icon" target="::parent(esl-sidebar)" mode="toggle"></esl-trigger>
  </nav>
</esl-sidebar>
