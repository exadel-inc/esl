{% if banner.title and not banner.disabled %}
<esl-d-banner class="container" close-on=".close-button" cookie-name="{{banner.cookie or ''}}">
  <div class="banner small esl-animate-slide up" esl-animate>
    <h5 class="banner-title">{{ banner.title }}</h5>
    <div class="markdown-container">{% markdown %} {{ banner.content }} {% endmarkdown %}</div>

    <button type="button" class="close close-button" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
</esl-d-banner>
{% endif %}
