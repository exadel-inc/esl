{% set releasedBlogs = collections.news | released %}
{% if releasedBlogs.length %}
<div class="blogs2 container">
  <h2>{{ collections.news.title }}</h2>
  <esl-animate target="::next::child" group></esl-animate>
  <ul class="blogs2-container">
    {% for item in releasedBlogs | reverse | limit(3) %}
      <li class="blogs2-item esl-animate-slide-down">
        <div class="blogs2-content">
          {% set found = false %}
          {% for tag in item.data.tags %}
            {% if tag === 'articles' %}{% set found = true %}{% endif %}
          {% endfor %}

          <h4 class="blogs2-content-name">
            {% if found %} üö©
            {% else %} ‚ö°Ô∏è 
            {% endif %}
            {{ item.data.name }}

            <span style="float: right; font-size: 0.5em;">({{item.date | date}})</span>
          </h4>
          <p class="blogs2-content-text">{{ item.templateContent | text | truncate(250) }}          <a class="arrow-link btn-link btn-sm"  href="{{ item.url | url }}">{{ landing.blogs.cta.text }}</a></p>
        </div>
      </li>
    {% endfor %}
  </ul>
  {# <div class="blogs2-more">
    <a class="arrow-link btn-link arrow-link2" style="text-align: center" href="{{ item.url | url }}">Load More</a>
  </div> #}
  {# <div class="blogs2-more">Load More</div> #}
</div>
{% endif %}
