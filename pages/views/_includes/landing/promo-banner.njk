<div class="promo-banner">
  <div class="accent-shape-left">
    {% include 'static/assets/common/accent-shape.svg' %}
  </div>

  <esl-animate target="::next"></esl-animate>
  <div class="promo-banner-content container esl-animate-slide-up">
    <h2 class="promo-banner-heading">{{ landing.promo.title }}</h2>
    <div class="promo-banner-text">
      {% import 'richtext.njk' as text %}
      {{ text.render(landing.promo.text) }}
    </div>
    <div class="btn-container promo-banner-btn-container">
      {% for cta in landing.promo.ctas or [] %}
        <a class="btn btn-spaced btn-{{ cta.style }}" href="{{ cta.url | url }}">{{ cta.text }}</a>
      {% endfor %}
    </div>
  </div>

  <div class="accent-shape-right">
    {% include 'static/assets/common/accent-shape.svg' %}
  </div>
</div>
