<div class="benefit container">
  <h2>{{ benefits.title }}</h2>
  <div class="benefit-container">
    {% for item in benefits.benefits %}
      <esl-d-animate class="benefit-item" esl-animate>
        <div class="benefit-icon">
          {% include "static/assets/" + item.icon %}
        </div>
        <div class="benefit-content">
          <div class="benefit-content-name">{{ item.name }}</div>
          <p class="benefit-content-text">
            {{ item.text }}
          </p>
        </div>
      </esl-d-animate>
    {% endfor %}
  </div>

  {% include 'static/assets/common/accent-invert.svg' %}
</div>

