{% import 'helpers.njk' as helpers %}
{% import 'function-helper.njk' as prop %}

{% macro Function(function, name, style) %}
  {% for item in function %}
      <h2 style="{{style}}">{{name}}
        {{helpers.flag(item.flags)}}
        {{item.name}}</h2>
        {{helpers.definedIn(item.sources)}}
        {{helpers.comment(item.comment)}}
        {{prop.createSignatures(item.children.signatures)}}
         <h3>Signature: {{item.name}} {% createSignature %}</h3>
  {% endfor %}
{% endmacro %}
