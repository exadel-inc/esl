---
title: Components
---

{% if title %}
  <h2 class="collection-title">
    {{ title | safe }}
  </h2>
{% endif %}

<ul class="collection-list">
  {% for plugin in collections.core %}
    <li class="item">
      <a href="{{ plugin.url | url }}">{{ plugin.data.title }}</a>
    </li>
  {%- endfor %}
  <h3 class="title">Plugins</h3>
  {% for plugin in collections.plugins %}
    <li class="item">
      <a href="{{ plugin.url | url }}">{{ plugin.data.title }}</a>
    </li>
    {% if plugin.data.isHeaderList %}
    <ul class="collection-sublist">
      {% for headerItem in collections.header %}
      <li class="item">
        <a href="{{ headerItem.url | url }}">{{ headerItem.data.title }}</a>
      </li>
      {%- endfor %}
    </ul>
    {%- endif %}
    {% if plugin.data.isSettingList %}
      <ul class="collection-sublist">
        {% for setting in collections.setting %}
          <li class="item">
            <a href="{{ setting.url | url }}">{{ setting.data.title }}</a>
          </li>
        {%- endfor %}
      </ul>
    {%- endif %}
  {%- endfor %}
</ul>
