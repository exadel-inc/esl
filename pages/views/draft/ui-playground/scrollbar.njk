{% import 'lorem.njk' as lorem %}

<section class="row">
  <div class="col-12">
    <uip-root uip-snippets-active>
      <uip-header></uip-header>
      <script type="text/html" uip-snippet label="ESL Scrollbar">
        <div class="border bg-white relative-block scrollable-content-block">
          <div style="max-width: 100%; max-height: 100%;" class="p-4 esl-scrollable-content">
            <div style="min-width: 50vw">
              {{ lorem.paragraphs(3) }}
            </div>
          </div>
          <esl-scrollbar class="scrollbar-blue" target="::prev(.esl-scrollable-content)"></esl-scrollbar>
          <esl-scrollbar class="scrollbar-blue scrollbar-second" target="::prev(.esl-scrollable-content)"
                         horizontal></esl-scrollbar>
        </div>
      </script>
      <uip-preview></uip-preview>
      <uip-settings target=".scrollable-content-block">
        <uip-select-setting label="Simple scroll:" attribute="class" mode="append">
          <option value="scrollbar-vertical">Vertical</option>
          <option value="scrollbar-horizontal">Horizontal</option>
        </uip-select-setting>
        <uip-bool-setting label="Resize content" attribute="resizable" target=".scrollable-content-block"></uip-bool-setting>
      </uip-settings>
    </uip-root>
  </div>
</section>
