<div class="container container-fluid d-flex justify-content-around box">
  <esl-media class="box-media"
             media-type="youtube"
             media-id="##MEDIAID##"
             title="Video Title"
             [ group="mediaGroup" ]
  ></esl-media>
  <esl-select-list class="form-control box-select-list" select-all-label="Select All Colors">
    <select esl-select-target
            multiple
            id="color_field"
            name="color_field"
            class="form-control">
      <option value="#f00">Red</option>
      <option value="#0f0">Green</option>
      <option value="#00f">Blue</option>
      <option value="#ff0">Yellow</option>
      <option value="#0ff">Light Blue</option>
      <option value="#f0f">Purple</option>
