<section class="row">
  <div class="col-12">
    <h4>Class toggle</h4>
    <div style="height: 70px;">
      <esl-toggleable class="d-block alert" active-class="alert-success !alert-danger">
          <strong>Toggleable can be used to switch state.</strong> You can toggle it using the trigger bellow.
      </esl-toggleable>
    </div>
    <p>Triggers</p>
    <div>
      <esl-trigger target="::parent(.row)::find(esl-toggleable)" class="btn btn-primary">Toggle type</esl-trigger>
    </div>
  </div>
</section>
<hr/>

<section class="row">
  <div class="col-12">
    <h4>Close On Body Click</h4>
    <div style="height: 130px;">
      <esl-toggleable class="popup"
                 close-on-esc
                 close-on-outside-action>
        <div class="alert alert-warning" role="alert">
          <strong>This is a popup.</strong> You can close it if you click outside.
          <esl-trigger target="::parent(esl-toggleable)::find(.child-popup)" class="btn btn-link">
            Toggle inner popup
          </esl-trigger>
          <esl-toggleable class="child-popup"
                     close-on-esc
                     close-on-outside-action>
            <div class="alert alert-info" role="alert">
              <strong>This is inner popup.</strong> You can also close it if you click outside.
            </div>
          </esl-toggleable>
        </div>
      </esl-toggleable>
    </div>
    <p>Triggers</p>
    <div>
      <esl-trigger class="btn btn-dark" target="::parent(section)::find(.popup)">
        Toggle popup
      </esl-trigger>
      <button id="prevArea" class="btn btn-danger">
        Prevent Click Zone
      </button>
      <script>
        document.querySelector('#prevArea').addEventListener('click', function (e) {
          e.preventDefault();
          e.stopPropagation();
        });
      </script>
    </div>
  </div>
</section>
