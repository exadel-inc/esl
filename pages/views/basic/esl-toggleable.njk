<section class="row">
  <div class="col-12">
    <h4>Click event</h4>
    <div style="height: 70px;">
      <esl-toggleable id="popup1"
                 body-class="popup-opened"
                 close-on=".close-button"
                 close-on-esc
                 open>
        <div class="alert alert-warning" role="alert">
          <strong>This is a popup.</strong> You can control it using the triggers below.
          <button type="button" class="close close-button" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      </esl-toggleable>
    </div>
    <p>Triggers</p>
    <div>
      <esl-trigger target="#popup1" mode="toggle" class="btn btn-primary">Toggle</esl-trigger>
      <esl-trigger target="#popup1" mode="show" class="btn btn-success">Show</esl-trigger>
      <esl-trigger target="#popup1" mode="hide" class="btn btn-dark">Hide</esl-trigger>
    </div>
  </div>
</section>
<hr/>

