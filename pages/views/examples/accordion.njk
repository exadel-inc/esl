---
layout: content
title: Accordion
name: Accordion
containerCls: container
tags: examples
aside:
  components:
    esl-trigger
    esl-panel
    esl-toggleable
---
{% import 'lorem.njk' as lorem %}

<section class="row">
  <div class="col-12">
    <h2>Related Components: </h2>
    <ul class="list-inline">
      <li class="list-inline-item"><a href="{{ '/components/esl-trigger' | url }}">ESL Trigger</a></li>
      <li class="list-inline-item"><a href="{{ '/components/esl-panel' | url }}">ESL Panel</a></li>
      <li class="list-inline-item"><a href="{{ '/components/esl-toggleable' | url }}">ESL Toggleable</a></li>
    </ul>
  </div>
</section>

<section class="row">
  <style>
    .card-header[active] {
      box-shadow: inset 0 0 6px rgba(0, 0, 0, .25);
      border-radius: 0;
    }
  </style>
  <div class="col-12">
    <esl-panel-group class="accordion-group mb-2">
      <h3> Simple accordion </h3>
      <div class="card">
        <esl-trigger class="card-header" target="::next">
          <h5 class="mb-0">
            <button class="btn btn-link">
              Toggle Accordion #1
            </button>
          </h5>
        </esl-trigger>
        <esl-panel open initial-params="{noAnimation: true}">
          <div class="card-body">
            {{ lorem.paragraphs(1) }}
          </div>
        </esl-panel>
      </div>
      <div class="card">
        <esl-trigger class="card-header" target="::next">
          <h5 class="mb-0">
            <button class="btn btn-link">
              Toggle Accordion #2
            </button>
          </h5>
        </esl-trigger>
        <esl-panel>
          <div class="card-body">
            {{ lorem.paragraphs(2) }}
          </div>
        </esl-panel>
      </div>
      <div class="card">
        <esl-trigger class="card-header" target="::next">
          <h5 class="mb-0">
            <button class="btn btn-link">
              Toggle Accordion #3
            </button>
          </h5>
        </esl-trigger>
        <esl-panel>
          <div class="card-body">
            {{ lorem.paragraphs(2) }}
          </div>
        </esl-panel>
      </div>
    </esl-panel-group>

    <esl-panel-group class="accordion-group mb-2">
      <h3> Hover accordion </h3>
      <div class="card">
        <esl-trigger class="card-header" target="::parent::find(.clps)" track-hover hide-delay="250">
          <h5 class="mb-0">
            <button class="btn btn-link">
              Toggle Accordion #1
            </button>
          </h5>
        </esl-trigger>
        <esl-panel class="clps" default-params="{hideDelay: 100}">
          <div class="card-body">
            {{ lorem.paragraphs(1) }}
          </div>
        </esl-panel>
      </div>
      <div class="card">
        <esl-trigger class="card-header" target="::next" track-hover hide-delay="250">
          <h5 class="mb-0">
            <button class="btn btn-link">
              Toggle Accordion #2
            </button>
          </h5>
        </esl-trigger>
        <esl-panel default-params="{hideDelay: 100}">
          <div class="card-body">
            {{ lorem.paragraphs(1) }}
          </div>
        </esl-panel>
      </div>
      <div class="card">
        <esl-trigger class="card-header" target="::next" track-hover hide-delay="250">
          <h5 class="mb-0">
            <button class="btn btn-link">
              Toggle Accordion #3
            </button>
          </h5>
        </esl-trigger>
        <esl-panel default-params="{hideDelay: 100}">
          <div class="card-body">
            {{ lorem.paragraphs(1) }}
          </div>
        </esl-panel>
      </div>
    </esl-panel-group>

    <esl-panel-group class="accordion-group mb-2" accordion-group="multiple">
      <h3> Simple accordion (multiple open items) </h3>
      <div class="card">
        <esl-trigger class="card-header" target="::next">
          <h5 class="mb-0">
            <button class="btn btn-link">
              Toggle Accordion #1
            </button>
          </h5>
        </esl-trigger>
        <esl-panel open initial-params="{noAnimation: true}">
          <div class="card-body">
            {{ lorem.paragraphs(1) }}
          </div>
        </esl-panel>
      </div>
      <div class="card">
        <esl-trigger class="card-header" target="::next">
          <h5 class="mb-0">
            <button class="btn btn-link">
              Toggle Accordion #2
            </button>
          </h5>
        </esl-trigger>
        <esl-panel open initial-params="{noAnimation: true}">
          <div class="card-body">
            {{ lorem.paragraphs(1) }}
          </div>
        </esl-panel>
      </div>
      <div class="card">
        <esl-trigger class="card-header" target="::next">
          <h5 class="mb-0">
            <button class="btn btn-link">
              Toggle Accordion #3
            </button>
          </h5>
        </esl-trigger>
        <esl-panel>
          <div class="card-body">
            {{ lorem.paragraphs(1) }}
          </div>
        </esl-panel>
      </div>
    </esl-panel-group>
  </div>
</section>
