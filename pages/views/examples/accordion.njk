{% import 'lorem.njk' as lorem %}

<section class="row">
  <div class="col-12">
    <h2>Simple single accordion with 1 panel open by default</h2>
    {% code 'html', 'code-block' %}
      <esl-panel-group class="accordion-group mb-4" max-open-items="1" min-open-items="0"/>
    {% endcode %}

    <esl-panel-group class="accordion-group mb-4" max-open-items="1" min-open-items="0">
      <div class="esl-d-accordion">
        <esl-trigger class="esl-d-accordion-header h4 esl-d-accordion-header-arrow" target="::next">
          Toggle Accordion #1
        </esl-trigger>
        <esl-panel open class="esl-d-accordion-panel">
          <div class="esl-d-accordion-body">
            {{ lorem.paragraphs(1) }}
          </div>
        </esl-panel>
      </div>
      <div class="esl-d-accordion">
        <esl-trigger class="esl-d-accordion-header h4 esl-d-accordion-header-arrow" target="::next">
          Toggle Accordion #2
        </esl-trigger>
        <esl-panel class="esl-d-accordion-panel">
          <div class="esl-d-accordion-body">
            {{ lorem.paragraphs(2) }}
          </div>
        </esl-panel>
      </div>
      <div class="esl-d-accordion">
        <esl-trigger class="esl-d-accordion-header h4 esl-d-accordion-header-arrow" target="::next">
          Toggle Accordion #3
