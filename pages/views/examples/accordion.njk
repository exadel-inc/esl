<section class="row">
  <div class="col-12">
    <h2>Hover accordion (triggers accept any available configuration)</h2>
    {% code 'html', 'code-block' %}
    <esl-panel-group class="accordion-group mb-4" min-open-items="0"/>
    {% endcode %}

    <esl-panel-group class="accordion-group mb-4" min-open-items="0">
      <div class="esl-d-accordion">
        <esl-trigger class="esl-d-accordion-header h4 esl-d-accordion-header-arrow"
                     target="::next"
                     track-click="not all" track-hover hide-delay="250">
          Toggle Accordion #1
        </esl-trigger>
        <esl-panel class="esl-d-accordion-panel" default-params="{hideDelay: 100}">
          <div class="esl-d-accordion-body">
            {{ lorem.paragraphs(1) }}
          </div>
        </esl-panel>
      </div>
      <div class="esl-d-accordion">
        <esl-trigger class="esl-d-accordion-header h4 esl-d-accordion-header-arrow"
                     target="::next"
                     track-click="not all"
                     track-hover
                     hide-delay="250">
          Toggle Accordion #2
        </esl-trigger>
        <esl-panel class="esl-d-accordion-panel" default-params="{hideDelay: 100}">
          <div class="esl-d-accordion-body">
            {{ lorem.paragraphs(1) }}
          </div>
        </esl-panel>
      </div>
      <div class="esl-d-accordion">
        <esl-trigger class="esl-d-accordion-header h4 esl-d-accordion-header-arrow"
