<section class="row">
  <div class="col-12">
    <h2>Nested accordion with auto-closable nested panels (esl-related-target)</h2>
    {% code 'html', 'code-block' %}
    <esl-panel class="esl-d-accordion-panel"
               esl-related-target="::find(esl-panel)"
               esl-related-target-action="hide">
      <esl-panel-group class="accordion-group mb-4">
        <esl-panel .../> <esl-panel .../> <esl-panel .../>
      </esl-panel-group>
    </esl-panel>
    {% endcode %}

    <esl-panel-group class="accordion-group mb-4" min-open-items="0" max-open-items="all">
      <div class="esl-d-accordion">
        <esl-trigger class="esl-d-accordion-header h4 esl-d-accordion-header-arrow" target="::next">
          Toggle Accordion #1 (auto-closable)
        </esl-trigger>
        <esl-panel class="esl-d-accordion-panel"
                   esl-related-target="::find(esl-panel)"
                   esl-related-target-action="hide">
          <div class="esl-d-accordion-body">
            {{ lorem.paragraphs(2) }}

            <esl-panel-group class="accordion-group mb-4" max-open-items="all" min-open-items="0">
              <div class="esl-d-accordion">
                <esl-trigger class="esl-d-accordion-header h4 esl-d-accordion-header-arrow" target="::next">
                  Toggle Nested Accordion #1.1
                </esl-trigger>
                <esl-panel class="esl-d-accordion-panel">
                  <div class="esl-d-accordion-body">
                    {{ lorem.paragraphs(3) }}
                  </div>
                </esl-panel>
              </div>
              <div class="esl-d-accordion">
                <esl-trigger class="esl-d-accordion-header h4 esl-d-accordion-header-arrow" target="::next">
                  Toggle Nested Accordion #1.2
                </esl-trigger>
                <esl-panel class="esl-d-accordion-panel">
                  <div class="esl-d-accordion-body">
                    {{ lorem.paragraphs(2) }}
                  </div>
                </esl-panel>
              </div>
              <div class="esl-d-accordion">
                <esl-trigger class="esl-d-accordion-header h4 esl-d-accordion-header-arrow" target="::next">
                  Toggle Nested Accordion #1.3 (auto-closable)
                </esl-trigger>
                <esl-panel class="esl-d-accordion-panel"
                           esl-related-target="::find(esl-panel)"
                           esl-related-target-action="hide">
                  <div class="esl-d-accordion-body">
                    {{ lorem.paragraphs(2) }}

                    <esl-panel-group class="accordion-group mb-4" max-open-items="all" min-open-items="0">
                      <div class="esl-d-accordion">
                        <esl-trigger class="esl-d-accordion-header h4 esl-d-accordion-header-arrow" target="::next">
                          Toggle Nested Accordion #1.3.1
                        </esl-trigger>
                        <esl-panel class="esl-d-accordion-panel">
                          <div class="esl-d-accordion-body">
                            {{ lorem.paragraphs(2) }}
                          </div>
                        </esl-panel>
                      </div>
                      <div class="esl-d-accordion">
                        <esl-trigger class="esl-d-accordion-header h4 esl-d-accordion-header-arrow" target="::next">
                          Toggle Nested Accordion #1.3.2
                        </esl-trigger>
                        <esl-panel class="esl-d-accordion-panel">
                          <div class="esl-d-accordion-body">
                            {{ lorem.paragraphs(2) }}
                          </div>
                        </esl-panel>
                      </div>
                      <div class="esl-d-accordion">
                        <esl-trigger class="esl-d-accordion-header h4 esl-d-accordion-header-arrow" target="::next">
                          Toggle Nested Accordion #1.3.3
                        </esl-trigger>
                        <esl-panel class="esl-d-accordion-panel">
                          <div class="esl-d-accordion-body">
                            {{ lorem.paragraphs(2) }}
                          </div>
                        </esl-panel>
                      </div>
                    </esl-panel-group>

                    {{ lorem.paragraphs(2) }}
                  </div>
                </esl-panel>
              </div>
            </esl-panel-group>

          </div>
        </esl-panel>
      </div>
      <div class="esl-d-accordion">
        <esl-trigger class="esl-d-accordion-header h4 esl-d-accordion-header-arrow" target="::next">
          Toggle Accordion #2 (not auto-closable)
        </esl-trigger>
        <esl-panel class="esl-d-accordion-panel (not auto-closable)">
          <div class="esl-d-accordion-body">
            {{ lorem.paragraphs(2) }}

            <esl-panel-group class="accordion-group mb-4" max-open-items="all" min-open-items="0">
              <div class="esl-d-accordion">
                <esl-trigger class="esl-d-accordion-header h4 esl-d-accordion-header-arrow" target="::next">
