---
layout: content
title: Custom ScrollIntoView implementation
name: Scroll Into View
tags: [examples, draft]
icon: examples/scrollbar.svg
aside:
  components:
    - esl-scrollbar
---

{% from 'scroll/scroll-options.njk' import scrollControls with context %}

<section>
  <h2>Nested scroll</h2>

  {{ scrollControls ('.scrollable-test-lvl-1, .scrollable-test-lvl-2, .scrollable-test-lvl-3') }}

  <div class="scrollable-test-lvl-3-wrapper border relative-block">

    <div scrollname="scrollableWrapper" style="height: 1200px" class="scrollable-test-lvl-3 p-4 esl-scrollable-content">
      <div style="width: 5000px">
      <div class="scrollable-test-lvl-2-wrapper border bg-white relative-block">
        <div scrollname="scrollableList" class="scrollable-test-lvl-2 p-4 esl-scrollable-content">
          <ul class="scrollable-test-lvl-1-wrapper">
            {% for i in range(1, 17) -%}
              <li scrollname="{{ i }}" style="background: {{ functions.randomColor() }}" class="scrollable-test-lvl-1">
                <p class="scrollable-test-p">{{ i }}</p>
              </li>
            {%- endfor %}
          </ul>
        </div>
        <esl-scrollbar class="scrollbar-blue" target="::prev(.esl-scrollable-content)"></esl-scrollbar>
        <esl-scrollbar class="scrollbar-blue scrollbar-second" target="::prev(.esl-scrollable-content)" horizontal></esl-scrollbar>
      </div>
      </div>
    </div>

    <esl-scrollbar class="scrollbar-white" target="::prev(.esl-scrollable-content)"></esl-scrollbar>
    <esl-scrollbar class="scrollbar-white scrollbar-second" target="::prev(.esl-scrollable-content)" horizontal></esl-scrollbar>
  </div>

  {{ scrollControls ('.scrollable-test-lvl-1, .scrollable-test-lvl-2, .scrollable-test-lvl-3') }}

</section>
