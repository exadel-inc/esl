<section class="container-fluid">
  <h2>Demo 1: </h2>
  <p>The first slide is active (1 slide)</p>

  <div class="row flex-column" esl-carousel-container>
    <button class="arrow-prev" data-slide-target="prev">
      <span class="icon-arrow-prev"></span>
    </button>
    <esl-carousel config="@-SM => {count: 2, view: 'multi'} | @+MD => {view: 'slide'}">
      <esl-carousel-touch-plugin></esl-carousel-touch-plugin>
      <div data-slides-area>
        <!-- CAROUSEL-ITEM -->
        {% for i in range(0, 16) %}
        <esl-carousel-slide {{ active if i == 0}}>
          <div class="card post-text" style="background: {{ functions.randomColor() }}">
            <p><b>{{i + 1}}</b></p>
          </div>
        </esl-carousel-slide>
        {% endfor %}
        <!-- /CAROUSEL-ITEM -->
      </div>
    </esl-carousel>
    <button class="arrow-next" data-slide-target="next">
      <span class="icon-arrow-next"></span>
    </button>
    <div class="text-center">
      <esl-carousel-dots class="carousel-dots-wrapper"></esl-carousel-dots>
    </div>
  </div>
</section>

