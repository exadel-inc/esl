---
layout: content
title: Carousel Example
name: Carousel Example
tags: [examples, draft]
icon: examples/carousel.svg
---
{% import 'lorem.njk' as lorem %}

<h2>Demo 1: </h2>

<section>
  <div esl-carousel-container>
    <button class="arrow-prev icon-arrow-prev"
            esl-carousel-nav="group:prev"><span class="sr-only">Previous Slide</span></button>

    <esl-carousel media="@XS|@SM|@MD|@LG|@XL" count="1|2|3|4|5" type="multi" loop="true">
      <esl-carousel-touch-plugin></esl-carousel-touch-plugin>
      <div data-slides-area>
        {% for item in cards %}
          <esl-carousel-slide {{ 'active' if loop.first }}>
            <div class="card">
              <div class="card-image img-container img-container-16-9">
                <esl-image lazy
                           mode="cover"
                           data-alt="{{ 'Carousel slide ' + loop.index }}"
                           data-src="{{ '/assets/carousel/' + loop.index + '-sm.jpg'  | url }}"></esl-image>
              </div>
              <div class="card-content p-3">
                <h5>{{ item.name }}</h5>
                {{ lorem.string(12) }}
              </div>
            </div>
          </esl-carousel-slide>
        {% endfor %}
      </div>
    </esl-carousel>

      <button class="arrow-next icon-arrow-next"
              esl-carousel-nav="group:next"><span class="sr-only">Next Slide</span></button>
      <esl-carousel-dots class="carousel-dots-wrapper"></esl-carousel-dots>
  </div>

</section>

<h2>Demo 2: </h2>
<section>
  <div esl-carousel-container>
     <button class="arrow-prev icon-arrow-prev" esl-carousel-nav="group:prev">
        <span class="sr-only">Previous Slide</span>
     </button>

     <esl-carousel media="@XS|@SM|@MD|@LG|@XL" count="2|3|4|5|6" type="multi" loop="true">
        <div data-slides-area>
        {% for item in items %}
           <esl-carousel-slide {{ 'active' if loop.first }}>
              <div class="card" style="justify-content: center; background: {{item.background}}">
                  <h4 class="text-center mb-0">{{ item.name }}</h4>
              </div>
           </esl-carousel-slide>
        {% endfor %}
        </div>
     </esl-carousel>

     <button class="arrow-next icon-arrow-next" esl-carousel-nav="group:next">
        <span class="sr-only">Next Slide</span>
     </button>
     <esl-carousel-dots class="carousel-dots-wrapper"></esl-carousel-dots>
  </div>
</section>

