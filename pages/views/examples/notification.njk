---
layout: content
title: Notification
name: Notification
tags: examples
icon: examples/notification.svg
aside:
  components:
    - esl-alert
---
{% import 'lorem.njk' as lorem %}

<section class="row">
  <div class="col-12">
    <h2>Triggers</h2>
    <div class="pt-2 pb-2">
      <button type="button" class="btn btn-primary esl-alert-show mb-1"
              data-text="Global Alert Long" data-cls="bg-danger">Show Long
      </button>
      <button type="button" class="btn btn-success esl-alert-show mb-1"
              data-text="Global Alert Short" data-delay="1500">Show Quick
      </button>
      <button type="button" class="btn btn-dark esl-alert-hide mb-1">Hide</button>
    </div>
  </div>
</section>

<section class="row">
  <div class="col-12">
    <h2>Triggers Encapsulated</h2>
    <div class="p-2 bg-info" style="min-height: 210px">
      <button type="button" class="btn btn-primary esl-alert-show mb-1"
              data-html="Inner <h2>Alert</h2> Long">Show Long
      </button>
      <button type="button" class="btn btn-success esl-alert-show mb-1"
              data-text="Inner Alert Short" data-delay="1500">Show Quick
      </button>
      <button type="button" class="btn btn-dark esl-alert-hide mb-1">Hide</button>

      <esl-alert default-params="{cls: 'bg-warn'}"></esl-alert>
    </div>
  </div>
</section>

<script type="text/javascript">
  document.body.addEventListener('click', function (e) {
    /** @type HTMLElement */
    var el = e.target;
    var params = {};

    if (el && el.matches('.esl-alert-show')) {
      if (el.dataset.cls) {
        params.cls = el.dataset.cls;
      }
      if (el.dataset.text) {
        params.text = el.dataset.text;
      }
      if (el.dataset.html) {
        params.html = el.dataset.html;
      }
      if (el.dataset.delay) {
        params.hideDelay = +el.dataset.delay;
      }
      el.dispatchEvent(new CustomEvent(`esl:alert:show`, {bubbles: true, detail: params}));
    }
    if (el && el.matches('.esl-alert-hide')) {
      el.dispatchEvent(new CustomEvent(`esl:alert:hide`, {bubbles: true}));
    }
  });
</script>
