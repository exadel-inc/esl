---
layout: content
---

<div class="collection-grid">
  {% for item in collections[collection] | notIgnored | released | sortByName %}
    <a class="collection-grid-item"
       href="{{ item.url | url }}">
      <div class="collection-grid-title collection-grid-box">
        <span>{{ item.data.name }}</span>
      </div>
      <div class="collection-grid-box collection-grid-svg">
        {% if item.data.icon %}
          {% include "static/assets/" + item.data.icon %}
        {% endif %}
      </div>
    </a>
  {% endfor %}
</div>
