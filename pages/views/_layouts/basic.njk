{% extends './html5.njk' %}
{% set scrollbar = true %}

{% block head %}
  <script>
    /* Polyfill */
    (function () {
      let version = '';
      if (!window.Promise || !window.CustomEvent) {
        version = 'full';
      } else if (!('getRootNode' in Element.prototype) || !window.customElements || !window.IntersectionObserver) {
        version = 'light';
      }
      (version) && document.write('<script type="text/javascript" src="{{ '/bundles/polyfill-' | url }}' + version + '.js"><\/script>');
    })();
  </script>

  <link rel="icon" type="image/png" href="{{ '/assets/logo-64x64.png' | url }}" />
  <link type="text/css" rel="stylesheet" href="{{ '/bundles/localdev.css' | url }} " />

  {% block extra_head %}{% endblock %}
{% endblock %}

{% block body %}
  <header class="header">
    {% include 'header.njk' %}
  </header>

  <main role="main">
    <div class="content {{ containerCls or 'container-fluid' }}">
      {% if title %}
        <h1 class="text-center pt-2">{{ title | safe }}</h1>
        <hr/>
      {% endif %}
      {{ content | safe or 'No content.' }}
    </div>
  </main>

  <footer class="footer bg-dark">
    {% include 'footer.njk' %}
  </footer>

  <script src="{{ '/bundles/localdev.js' | url }}"></script>
{% endblock %}
