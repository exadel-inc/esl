<h2>Tests Details</h2>
{% for file in files %}
<h3>{{ file.filePath }}</h3>
<table>
  <tbody>
  <tr>
    <td>Test</td>
    <td>Status</td>
    <td>Time</td>
  </tr>
  {% for test in file.tests %}
    <tr>
      <td>{{test.name}}: {{test.title}}</td>
      <td>{% if test.status === 'passed' %} ✅ {% else %} ❌ {% endif %}</td>
      <td>{% if test.time < 1000 %} {{test.time + 'ms'}} {% else %} {{ (test.time / 1000) + 's' }} {% endif %}</td>
    </tr>

    {% if test.status != 'passed' %}
    <tr>
      <td colspan="3">
      {% if test.hasSnapshot %}
        <img src="{{ basePath | resolveURL(test.dirPath + '/' + test.snapshot) }}" alt="Test Diff {{ test.snapshot }}" />
      {% else %}
        <pre>{{ test.messages | join('\n') }}</pre>
      {% endif %}
      </td>
    </tr>
    {% endif %}

  {% endfor %}
  </tbody>
</table>
{% endfor %}
