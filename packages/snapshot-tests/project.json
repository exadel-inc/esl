{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "esl-e2e",
  "projectType": "application",
  "targets": {
    "run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx jest",
        "cwd": "packages/snapshot-tests"
      }
    },
    "run:update": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx jest -u",
        "cwd": "packages/snapshot-tests"
      }
    },

    "lint": {
      "executor": "nx:noop",
      "dependsOn": [
        "lint:eslint"
      ]
    },
    "lint:eslint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint \"src/**/*.ts\"",
        "cwd": "packages/snapshot-tests"
      },
      "cache": true,
      "inputs": [
        "{projectRoot}/src/**/*.ts",
        "{projectRoot}/eslint.config.mjs"
      ]
    }
  }
}
