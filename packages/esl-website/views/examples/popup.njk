<style>
  .uip-popup-content {display: flex; justify-content: center; align-items: center; height: 100%;}
  .uip-popup-content.align-items-start {align-items: flex-start;}
  .uip-popup-trigger-outer {aspect-ratio: 1; display: flex; align-items: center;}
  .uip-popup-trigger-inner {width: 100%; height:100%; display: flex; align-items: center; justify-content: center;}
  .uip-popup-trigger-diagonal-alignment {aspect-ratio: 1; display: flex; align-items: center;}
</style>

<section class="row">
  <div class="col-12">
    <uip-root>
      <script type="text/html"
              label="Popup outside the trigger"
              uip-snippet
              uip-snippet-js="js-snippet-popup">

        <div class="uip-popup-content">
          <esl-trigger
            target="#uip-popup-outer"
            class="uip-popup-trigger-outer btn btn-sec-blue">
            Click me
          </esl-trigger>
          <esl-popup
            id="uip-popup-outer"
            class=""
            position="top"
            position-origin="outer"
            alignment-tether=""
            margin-tether="5"
            offset-trigger="3"
            offset-placement="0">
            <div style="height: 170px; width:250px;"></div>
          </esl-popup>
        </div>
      </script>
      <script type="text/html"
              label="Popup inside the trigger"
              uip-snippet
              uip-snippet-js="js-snippet-popup">
        <div class="uip-popup-content">
          <esl-trigger
            target="#uip-popup-inner"
            class="uip-popup-trigger-inner btn btn-sec-blue">
            Click me
          </esl-trigger>
          <esl-popup
            id="uip-popup-inner"
            class=""
            position="top"
            position-origin="inner"
            alignment-tether=""
            margin-tether="5"
            offset-trigger="3"
            offset-placement="0">
            <div style="height: 170px; width:250px;"></div>
          </esl-popup>
        </div>
      </script>
      <script type="text/html"
              label="Popup menu"
              uip-snippet
              uip-snippet-js="js-snippet-popup">
        <div class="uip-popup-content align-items-start">
          <esl-trigger
            target="#uip-popup-menu"
            class="uip-popup-trigger-menu btn btn-sec-blue">
            Click me
          </esl-trigger>
          <esl-popup
            id="uip-popup-menu"
            class="disable-arrow"
            position="bottom start"
            alignment-tether="start"
            margin-tether="0"
            offset-trigger="3"
            offset-placement="0">
            <div style="height: 200px; width:150px;"></div>
          </esl-popup>
        </div>
      </script>
      <script type="text/html"
              label="Right edge alignment"
              uip-snippet
              uip-snippet-js="js-snippet-popup">
        <div class="uip-popup-content">
          <esl-trigger
            target="#uip-popup-right-edge-alignment"
            class="uip-popup-trigger-right-edge-alignment btn btn-sec-blue">
            Click me
          </esl-trigger>
          <esl-popup
            id="uip-popup-right-edge-alignment"
            class=""
            position="top end"
            alignment-tether="end"
            margin-tether="10"
            offset-trigger="3"
            offset-placement="-24">
            <div style="height: 70px; width:250px;"></div>
          </esl-popup>
        </div>
      </script>
      <script type="text/html"
              label="Diagonal alignment"
              uip-snippet
              uip-snippet-js="js-snippet-popup">
        <div class="uip-popup-content">
          <esl-trigger
            target="#uip-popup-diagonal-alignment"
            class="uip-popup-trigger-diagonal-alignment btn btn-sec-blue">
            Click me
          </esl-trigger>
          <esl-popup
            id="uip-popup-diagonal-alignment"
            class="disable-arrow"
            position="right start"
            alignment-tether="end"
            margin-tether="0"
            offset-trigger="0"
            offset-placement="0">
            <div style="height: 100px; width:100px;"></div>
          </esl-popup>
        </div>
      </script>

      <script id="js-snippet-popup" type="text/plain">
        import { ESLPopup, ESLTrigger } from '@exadel/esl';
        ESLPopup.register();
        ESLTrigger.register();
      </script>

      <uip-snippets class="uip-toolbar" dropdown-view="@xs"></uip-snippets>
      <uip-preview resizable></uip-preview>
      <uip-settings target="esl-popup" label="Settings" resizable vertical="@+sm">
        <uip-select-setting label="Position" target="esl-popup" attribute="position">
          <option value="top">Top</option>
          <option value="bottom">Bottom</option>
          <option value="left">Left</option>
          <option value="right">Right</option>
          <option value="top start">Top+start</option>
          <option value="bottom start">Bottom+start</option>
          <option value="left start">Left+start</option>
          <option value="right start">Right+start</option>
          <option value="top end">Top+end</option>
          <option value="bottom end">Bottom+end</option>
          <option value="left end">Left+end</option>
          <option value="right end">Right+end</option>
        </uip-select-setting>

        <uip-bool-setting label="Disable arrow" target="esl-popup" attribute="class" mode="append" value="disable-arrow" ></uip-bool-setting>

        <uip-text-setting label="Placement offset" target="esl-popup" attribute="offset-placement" value="0"></uip-text-setting>

        <uip-select-setting label="Tether alignment" target="esl-popup" attribute="alignment-tether">
          <option value="">(empty by default)</option>
          <option value="start">Start</option>
          <option value="end">End</option>
        </uip-select-setting>

        <uip-text-setting label="Tether offset" target="esl-popup" attribute="margin-tether" value="5"></uip-text-setting>

        <uip-text-setting label="Trigger offset" target="esl-popup" attribute="offset-trigger" value="3"></uip-text-setting>



      </uip-settings>
      <uip-editor label="Source code (HTML)" collapsible copy></uip-editor>
      <uip-editor source="js" label="Source code (JS)" collapsible collapsed copy></uip-editor>
    </uip-root>
  </div>
</section>
