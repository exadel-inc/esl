---
layout: content
title: Carousel
name: Carousel
tags: [examples, beta]
collectionIcon: examples/carousel.svg
eleventyImport:
  collections:
    - carousel-sample
aside:
  min-version: 5.0.0
  components:
    - esl-carousel
---
{% import 'lorem.njk' as lorem %}

<section class="row">
  <div class="col-12">
    <uip-root class="uip-theme-esl">
      {% for sample in collections['carousel-sample'] | sortBy('order', 'title') %}
        <script type="text/html"
                label=" {{ sample.data.title }}"
                uip-snippet
                uip-snippet-js="js-snippet-carousel-registration">
          {{ sample.content | safe }}
        </script>
      {% endfor %}

      <script id="js-snippet-carousel-registration" type="text/plain">
        import {ESLCarousel} from '@exadel/esl';
        ESLCarousel.register();
      </script>

      <uip-snippets class="uip-toolbar" dropdown-view="@xs"></uip-snippets>
      <uip-preview></uip-preview>
      <uip-settings target="[demo-options-target]" collapsed>
        <uip-bool-setting label="Loop" attribute="loop"></uip-bool-setting>
        <uip-select-setting label="Touch Plugin:" attribute="esl-carousel-touch" mode="replace">
          <option value="none">Disable</option>
          <option value="drag">Always Drag</option>
          <option value="swipe">Always Swipe</option>
        </uip-select-setting>
      </uip-settings>
      <uip-editor></uip-editor>
      <uip-editor source="js" collapsed></uip-editor>
    </uip-root>
  </div>
</section>
