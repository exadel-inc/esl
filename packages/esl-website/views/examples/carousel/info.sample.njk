---
title: Carousel (Info)
order: 12
tags: carousel-sample
---

<div class="esl-carousel-no-extra-space esl-carousel-nav-container">
  <button type="button" class="esl-carousel-arrow inner prev hide-xs" esl-carousel-nav="group:prev">
    <span class="sr-only">Previous Slide</span>
  </button>

  <esl-carousel demo-options-target id="promo-carousel"
                esl-carousel-touch="none | @touch => swipe"
                loop="true">
    <ul esl-carousel-slides>
      {% for i in range(0, 4) -%}
        <li esl-carousel-slide title="{{ 'Carousel slide ' + loop.index }}">
          <div class="card">
            <div class="img-container img-container-16-9" esl-image-container>
              <img class="img-fade img-cover"
                   alt="{{ 'Carousel slide ' + loop.index }}"
                   src="{{ '/assets/carousel/' + loop.index + '-sm.jpg' | url }}"
                   loading="lazy" />
              <div class="h1 text-slide text-white">Slide {{ loop.index }}</div>
            </div>
          </div>
        </li>
      {%- endfor %}
    </ul>
  </esl-carousel>

  <button type="button" class="esl-carousel-arrow inner next hide-xs" esl-carousel-nav="group:next">
    <span class="sr-only">Next Slide</span>
  </button>

  <esl-carousel-info format="Slide {current} of {total}"></esl-carousel-info>
  <esl-carousel-info format="{title} of {totalSlides}"></esl-carousel-info>
  <esl-carousel-info format="Progress: {percent}%"></esl-carousel-info>
  <esl-carousel-info target="#promo-carousel"></esl-carousel-info>

  <style>
    .text-slide {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }
    .esl-carousel-info {
      display: block;
      width: 100%;
      text-align: center;
    }
  </style>
</div>
