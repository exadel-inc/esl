            </esl-trigger>
            <esl-panel class="esl-d-tab-panel tab-1" tabindex="0">
              <div class="esl-d-tab-body">
                <!-- text 130 -->
              </div>
            </esl-panel>

            <esl-trigger class="esl-d-accordion-header esl-d-accordion-header-arrow h5"
                         target="::next">Toggle Tab #2
