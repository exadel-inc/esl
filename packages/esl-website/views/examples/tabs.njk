                <esl-tab class="h5" target="::parent(.esl-d-tabs)::find(.tab-4)">Tab #4</esl-tab>
              </li>
            </ul>
          </esl-tabs>

          <esl-panel-group class="esl-d-tab-group"
                           mode="@-SM => accordion | @+MD => tabs"
                           min-open-items="0 | @+MD => 1"
                           max-open-items="all | @+MD => 1"
                           refresh-strategy="@-SM => last | @+MD => initial"
                           mode-cls-target="::parent">
            <esl-a11y-group targets="::child(esl-trigger)"></esl-a11y-group>

            <esl-trigger class="esl-d-accordion-header esl-d-accordion-header-arrow h5"
