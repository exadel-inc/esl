---
  layout: content
  title: Playground
  order: 11
  tags: [nav]

  containerCls: uip typo-large
  landing: true
  core-collection: playground
  collection: playground

  icon: sidebar/playground.svg
  eleventyImport:
    collections: ["playground"]
---

<div class="uip-marquee">
  <div class="uip-logo">
    &lt;
      <span class="uip-logo-typewriter">UI Playground</span>
    &gt;
  </div>
  <p class="uip-description">{{playground.marquee.description}}</p>
</div>

<br/>

<div class="uip-benefits">
  <h2>{{playground.benefits.title}}</h2>
  <esl-animate target="::next::child" group></esl-animate>
  <ul class="uip-benefits-list">
    {% for item in playground.benefits.items %}
      <li class="uip-benefits-list-item esl-animate-slide left">
        {{ item.text }}
      </li>
    {% endfor %}
  </ul>
</div>

<br/>

<div class="uip-demo">
  <h2>{{playground.demo.title}}</h2>
  <p> {{playground.demo.description}} </p>

  <uip-root store-key='uip-landing' editor-collapsed>
    <script type="text/html" uip-snippet label="Logo">
      <div class="logo-content">
        <a class="get-started blue-clr" href="{{ '/playground/introduction/' | url }}">
          <span>Get started with</span>
            {% set snippetContent %}
              {% include 'static/assets/sidebar/playground.svg' %}
            {% endset %}
            {{ snippetContent | replace('<svg', '<svg width="100"') | safe }}
        </a>
      </div>
    </script>
    <uip-preview></uip-preview>

    <uip-settings resizable collapsible vertical="@+sm" target=".logo-content" theme-toggle>
      <uip-slider-setting label="Width:" target=".get-started svg" attribute="width" min="50" max="150"></uip-slider-setting>

      <uip-select-setting label="Color:" attribute="class" target=".get-started" mode="append">
        <option value="orange">Orange</option>
        <option value="blue">Blue</option>
        <option value="green">Green</option>
      </uip-select-setting>
    </uip-settings>

    <uip-editor collapsible copy></uip-editor>
  </uip-root>
</div>
