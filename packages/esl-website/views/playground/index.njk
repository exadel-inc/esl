      background-color: #ffffff;
      padding: 1.5rem;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
  }

  .playground-typewriter {
    overflow: hidden;
    white-space: nowrap;
    display: inline-block;
    position: relative;
    width: 0;
    animation: typewriter 10s steps(12) infinite normal both, blink-caret 0.75s step-end infinite;
    border-right: 0.1em solid #0f3460;
  }

  @keyframes typewriter {
    0%, 5% {
      width: 0;
    }

    15%, 40% {
      width: 6.5em;
    }
    
    45%, 70% {
      width: 6.5em;
    }
    
    80%, 95% {
      width: 0;
    }

    100% {
      width: 0;
    }
  }

  @keyframes blink-caret {
    from, to {
      border-color: transparent;
    }
    50% {
      border-color:#0f3460;
    }
  }
</style>

