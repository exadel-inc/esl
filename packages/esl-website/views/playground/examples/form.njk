<p>This example showcases real-time editing capabilities for both HTML and JavaScript code</p>

<uip-root theme-toggle>
  <div class="uip-toolbar">
    <uip-snippets dropdown-view="all"></uip-snippets>
    <uip-theme-toggle></uip-theme-toggle>
  </div>

  <script type="text/html" uip-snippet-js="snippet-js" uip-snippet uip-isolated uip-resizable label="Form Example">
    <style>
      .uip-d-form-section {
        display: flex;
        flex-direction: column;

        label {
          margin-bottom: 0.5em;
        }

        input[type="submit"] {
          cursor: pointer;
          align-self: start;
        }
      }
    </style>

    <form class="uip-d-form">
      <div class="uip-d-form-section">
        <label for="name">Name: </label>
        <input type="text" id="name" name="userName">
      </div>
      <div class="uip-d-form-section">
        <label for="email">Email: </label>
        <input type="email"
               pattern="^(([^<>()[\]\\.,;:\s@']+(\.[^<>()[\]\\.,;:\s@']+)*)|('.+'))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$"
               id="email" name="userEmail">
      </div>
      <div class="uip-d-form-section">
        <label for="pass">Password: </label>
        <input type="password" id="pass" name="userPass">
      </div>
      <input type="submit" value="Send">
    </form>
  </script>
  <script type="text/plain" id="snippet-js">
    document.querySelector('form').onsubmit = (e) => {
      e.preventDefault();
      const json = JSON.stringify(Object.fromEntries(new FormData(e.target)));
      alert(`Form submitted with ${json}!`);
    };
  </script>

  <uip-preview class="centered-content"></uip-preview>

  <uip-settings resizable vertical="@+sm" target=".uip-d-form">
    <uip-bool-setting label="Email validation" target="#email" mode="append" attribute="class" value="validation-input"></uip-bool-setting>
  </uip-settings>

  <uip-editor copy collapsible label="Markdown"></uip-editor>
  <uip-editor source="js" copy collapsible label="JavaScript"></uip-editor>
</uip-root>
