{
  "compilerOptions": {
    "declaration": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "target": "ES6",
    "downlevelIteration": true,
    "module": "ES2020",
    "moduleResolution": "Node",
    "lib": [
      "ES2015",
      "DOM",
      "DOM.Iterable"
    ],
    "rootDir": "src",
    "outDir": "./esm"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "*.test.ts",
    "**/test/*.ts",
    "node_modules"
  ]
}
