{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "{projectRoot}/dist",
        "{projectRoot}/modules"
      ],
      "cache": true
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "pack:tar": {
      "dependsOn": [
        "build"
      ]
    }
  },
  "plugins": [
    {
      "plugin": "@nx/jest/plugin",
      "options": {
        "targetName": "jest:test"
      }
    }
  ]
}
