{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "clean",
        "^build"
      ],
      "inputs": [
        "{workspaceRoot}/tsconfig.json",
        "{projectRoot}/tsconfig.json",
        "{projectRoot}/src/**/*",
        "{projectRoot}/views/**/*"
      ],
      "outputs": [
        "{projectRoot}/dist",
        "{projectRoot}/modules"
      ],
      "cache": true
    },
    "lint": {
      "dependsOn": [
        "@exadel/eslint-plugin-esl:build"
      ],
      "cache": false
    },
    "pack": {
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "{workspaceRoot}/target/{projectName}-*.tgz"
      ]
    },
    "test": {
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "{projectRoot}/coverage"
      ]
    }
  },
  "plugins": []
}
