{
  "name": "@exadel/esl-root",
  "private": true,
  "version": "5.1.0",
  "description": "Exadel Smart Library (ESL) is the lightweight custom elements library that provide a set of super-flexible components",
  "license": "MIT",
  "homepage": "https://esl-ui.com/",
  "keywords": [
    "esl"
  ],
  "bugs": {
    "url": "https://github.com/exadel-inc/esl/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exadel-inc/esl.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "cd packages/esl-website && npm run start",
    "test": "npm run test -ws",
    "test:ci": "npm run test --ws -- --coverage",
    "test:e2e": "npm run run --workspace packages/snapshot-tests",
    "test:e2e:update": "npm run run:update --workspace packages/snapshot-tests",
    "test:unit": "jest --silent --noStackTrace",
    "test:report": "jest --coverage",
    "lint": "npm run lint -ws",
    "prepare": "husky",
    "preversion": "npm test",
    "version": "cross-env-shell \"npm version $npm_package_version --no-git-tag-version --ws\" && git add **/package*.json",
    "pack": "npm pack --workspace packages/esl --workspace packages/eslint-plugin --workspace packages/eslint-config --workspace packages/stylelint-config",
    "publish": "npm publish --workspace packages/esl --workspace packages/eslint-plugin --workspace packages/eslint-config --workspace packages/stylelint-config",
    "fix:less": "stylelint --fix \"**/*.less\""
  },
  "dependencies": {
    "@exadel/esl": "file:packages/esl",
    "@exadel/eslint-config-esl": "file:packages/eslint-config",
    "@exadel/eslint-plugin-esl": "file:packages/eslint-plugin",
    "@exadel/stylelint-config-esl": "file:packages/stylelint-config"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/jest": "^29.5.14",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.1.2",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.22.0",
    "foreach-cli": "^1.8.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "kleur": "^4.1.5",
    "less": "^4.2.2",
    "lint-staged": "^15.4.3",
    "postcss": "^8.5.3",
    "postcss-less": "^6.0.0",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.3",
    "smoothscroll-polyfill": "^0.4.4",
    "stylelint": "^16.15.0",
    "ts-jest": "^29.2.6",
    "typescript": "5.8.2"
  },
  "overrides": {
    "conventional-changelog-conventionalcommits": ">= 8.0.0"
  },
  "browserslist": [
    "last 3 versions",
    "> 1%",
    "not dead"
  ],
