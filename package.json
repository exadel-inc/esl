{
  "name": "@exadel/ui-playground",
  "version": "1.0.0-beta.7",
  "description": "UIPlayground is a solution for presenting your custom components.",
  "type": "module",
  "keywords": [
    "playground",
    "demo",
    "presentation",
    "editor",
    "custom elements"
  ],
  "types": "esm/playground.d.ts",
  "module": "esm/playground.js",
  "style": "esm/playground.css",
  "main": "lib/playground.run.js",
  "files": [
    "lib/**/*",
    "esm/**/*",
    "tsconfig.json",
    "README.md",
    "CLA.md"
  ],
  "sideEffects": [
    "lib/palyground.css",
    "lib/palyground.run.js",
    "src/**/*.less",
    "src/palyground.ts",
    "src/palyground.run.ts"
  ],
  "scripts": {
    "start": "concurrently \"npm run serv\" \"npm run build:dev && npm run build:watch\"",
    "serv": "browser-sync start -c bs-config.cjs",
    "clean": "rimraf \"{lib,esm}/**\"",
    "build": "concurrently \"npm run build:dev\" \"npm run build:less\" \"npm run build:ts\"",
    "build:ts": "tsc --project tsconfig.json",
    "build:less": "npm run build:less:cpy && npm run build:less:css",
    "build:less:cpy": "copyfiles -u 1 \"./src/**/*.less\" \"esm\"",
    "build:less:css": "foreach -x \"lessc --npm-import=\"prefix=~\" #{path} #{dir}/#{name}.css\" -g \"esm/{*,*/*,plugins/settings/*}.less\"",
    "build:dev": "npm run clean && webpack -c webpack.config.js",
    "build:watch": "npm run clean && webpack -c webpack.config.js --watch",
    "lint": "concurrently \"npm run lint:js\" \"npm run lint:css\"",
    "lint:js": "eslint src/**/*.ts",
    "lint:css": "stylelint src/**/*.less",
    "prepare": "husky install && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exadel-inc/ui-playground.git"
  },
  "contributors": [
    "Yuliya Adamskaya <yadamska@exadel.com>",
    "Harshunova Natallia <nharshunova@exadel.com>",
    "Palanevich Aliaksandr <apalanevich@exadel.com>",
    "Valchetskaya Palina <pvalchetskaya@exadel.com>",
    "Bazukevich Aliaksandr <abazukevich@exadel.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/exadel-inc/ui-playground/issues"
  },
  "homepage": "https://github.com/exadel-inc/ui-playground#readme",
  "dependencies": {
    "@exadel/esl": "^3.0.0-beta.19",
    "@types/js-beautify": "^1.13.2",
    "ace-builds": "^1.4.12",
    "js-beautify": "^1.14.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.3",
    "@semantic-release/npm": "^7.1.3",
    "@semantic-release/release-notes-generator": "^9.0.3",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "browser-sync": "^2.27.5",
    "concurrently": "^6.2.1",
    "copyfiles": "^2.4.1",
    "eslint": "^7.32.0",
    "foreach-cli": "^1.8.1",
    "husky": "^7.0.1",
    "less": "^4.1.1",
    "less-loader": "^10.0.1",
    "less-plugin-npm-import": "^2.1.0",
    "postcss": "^8.3.6",
    "postcss-loader": "^6.1.1",
    "postcss-preset-env": "^6.7.0",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.4.6",
    "stylelint": "^13.13.1",
    "ts-loader": "^9.2.5",
    "typescript": "^4.3.5",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0"
  }
}
