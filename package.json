{
  "name": "@exadel/esl-root",
  "private": true,
  "version": "0.0.0",
  "description": "Exadel Smart Library (ESL) is the lightweight custom elements library that provide a set of super-flexible components",
  "license": "MIT",
  "homepage": "https://esl-ui.com/",
  "keywords": [
    "esl"
  ],
  "bugs": {
    "url": "https://github.com/exadel-inc/esl/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/exadel-inc/esl.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "nx run esl-website:start",
    "test": "nx run-many -t test",
    "test:e2e": "nx run esl-e2e:run",
    "test:e2e:update": "nx run esl-e2e:run:update",
    "lint": "nx run-many -t lint",
    "build": "nx run-many -t build",
    "build:core": "nx run esl:build",
    "build:website": "nx run esl-website:build",
    "pack": "npx mkdirp target && nx run-many -t pack",
    "prepare": "husky",
    "preversion": "npm test",
    "version:notes": "node scripts/notes.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@nx/eslint": "^20.8.0",
    "@nx/jest": "^20.8.0",
    "@types/jest": "^30.0.0",
    "chokidar-cli": "^3.0.0",
    "copyfiles": "^2.4.1",
    "cpy-cli": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.31.0",
    "findx-cli": "^0.2.2",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "kleur": "^4.1.5",
    "lerna": "^8.2.2",
    "less": "^4.4.0",
    "less-plugin-clean-css": "^1.6.0",
    "lint-staged": "^16.1.2",
    "postcss": "^8.5.6",
    "postcss-less": "^6.0.0",
    "rimraf": "^6.0.1",
    "smoothscroll-polyfill": "^0.4.4",
    "stylelint": "^16.22.0",
    "touch": "^3.1.1",
    "ts-jest": "^29.4.0",
    "typescript": "5.8.3"
  }
}
