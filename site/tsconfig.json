{
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "target": "ES6",
    "downlevelIteration": true,
    "module": "ES2022",
    "moduleResolution": "Node",
    "lib": [
      "ES2015",
      "DOM",
      "DOM.Iterable"
    ]
  },
  "include": [
    "src"
  ]
}
